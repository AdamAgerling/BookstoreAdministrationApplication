<Window x:Class="BookstoreAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:view="clr-namespace:BookstoreAdmin.View"
        mc:Ignorable="d"
        Title="Bookstore Administration" Height="850" Width="1200">
    <Grid Background="#333">
       

        <TabControl>
            <TabItem Header="Books">
                <view:BooksView />
            </TabItem>

            <TabItem Header="Authors">
                <view:AuthorsView />
            </TabItem>
            <TabItem Header="Publishers">
                <view:PublishersView />
            </TabItem>
            <TabItem Header="Stores"></TabItem>

        </TabControl>

    </Grid>
</Window>
